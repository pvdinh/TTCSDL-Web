@{
    Layout = null;
}
@model CAFE_Song_Lo.Models.account
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/assets/login/Login.css")
</head>
<body>
    <div class="login-form">

        @using (Html.BeginForm("Result", "Login", FormMethod.Post))
        {
            <h1 style="user-select:none">Login</h1>
            <div class="txtb">
                @Html.TextBoxFor(model => model.username, new { placeholder = "Username", required = "true" })
                <span></span>
            </div>
            <p style="color:red">@Html.ValidationMessageFor(model => model.username)</p>
            <div class="txtb">
                @Html.TextBoxFor(model => model.password, new { placeholder = "Password", type = "password", required = "true" })
                <span></span>
            </div>
            <button type="submit" class="logbnt">Login</button>
            if (TempData["LoginMessage"] != null)
            {
                <div id="AlertBox" style="color:red;padding-top:20px;">
                    @TempData["LoginMessage"]
                </div>}
            <script>
                $(".txtb input").on("focus", function () {
                    $(this).addClass("focus");
                });

                $(".txtb input").on("blur", function () {
                    if ($(this).val() == "")
                        $(this).removeClass("focus");
                });
            </script>

        }

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>



















